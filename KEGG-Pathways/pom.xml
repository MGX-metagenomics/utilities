        <dependency>
            <groupId>de.cebitec.mgx</groupId>
            <artifactId>JFreeSVG-OSGi</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.service.jdbc</artifactId>
            <version>1.0.0</version>
        </dependency>
    </dependencies>
</project>
